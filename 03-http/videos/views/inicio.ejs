<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Lista de Usuarios</title>
    <link rel="stylesheet"
          href="/bootstrap/css/bootstrap.css">
    <link rel="stylesheet"
          href="/css/mis-estilos.css">
</head>
<body>

<div class="container">

    <% const existeMensaje = typeof mensaje !== "undefined" ? true : false; %>

    <% if(existeMensaje){ %>

        <p>MENSAJE: <%= mensaje %></p>

    <% } %>
    <% var apellido = 'Eguez' %>
    <!-- h1 -> Header 1 -->
    <h1>  <%= nombre %> <%= apellido %>  </h1>
    <!-- p -> parrafo -->

    <!-- a -> anchor-->


    <script>
        function holaMundo(evento) {
            console.log(evento)

            evento.preventDefault();

            const respuesta = confirm('¿Estas seguro?')

            console.log('Hola mundo')
        }

        function borrar(evento) {

            const respuesta = confirm('¿Estas seguro?')

            if (!respuesta) {
                event.preventDefault();
            }

        }


    </script>


    <a href="http://www.google.com"
       onclick="holaMundo(event)">
        click
    </a>



        <form action="/Usuario/inicio" method="get">
            <div class="row">
                <div class="col-sm-9">

                    <div>
                        <label for="busqueda">Busqueda</label>
                        <input id="busqueda" type="text" name="busqueda">
                    </div>

                </div>
                <div class="col-sm-3">

                    <button type="submit">Buscar</button>

                </div>
            </div>
        </form>

        <div class="row">
            <div class="col-sm-9"></div>
            <div class="col-sm-3">
                <a href="/Usuario/crear-usuario">
                    <button>Crear Usuario</button>
                </a>
            </div>
        </div>















    <h2> Arreglo </h2>

    <!-- ul -> unordered list-->
    <!-- ol -> ordered list-->
    <!-- li -> list item -->
    <!--
<ul>
<% //arreglo.forEach((numero)=>{     %>
    <li><%= // numero    %></li>
<%     // })      %>
</ul>
-->


    <table class="table table-hover">
        <caption>Lista de usuarios</caption>
        <!-- tr -> table row -->
        <thead>
        <tr>
            <!-- th -> table header -->
            <th width="30%">Nombre</th>
            <th width="50%">Biografía</th>
            <th width="20%">Acciones</th>
        </tr>
        </thead>
        <!-- tr -> table row -->
        <tbody>
        <% arreglo.forEach((usuario)=>{ %>
            <tr>
                <!-- td -> table detail -->
                <td><%= usuario.nombre %></td>
                <td><%= usuario.biografia %></td>
                <td>
                    <form action="/Usuario/borrar/<%= usuario.id %>"
                          method="post"
                    >
                        <!--<button type="button">Yo no</button>-->
                        <!--<button>Yo si</button>-->
                        <button type="submit"
                                class="btn btn-outline-danger btn-block btn-espaciado"
                                onclick="borrar(event)">Eliminar
                        </button>
                    </form>
                    <a class="quitar-decoracion" href="/Usuario/actualizar-usuario/<%= usuario.id %>">

                        <button class="btn btn-outline-info btn-block btn-espaciado"
                                type="button">
                            Actualizar
                        </button>
                    </a>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>


</div>

</body>
</html>